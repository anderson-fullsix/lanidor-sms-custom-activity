{
    "workflowApiVersion": "1.1",
    "metaData": {
        "icon": "images/sms_icon.png",
        "category": "message"
    },
    "type": "REST",
    "lang": {
        "en-US": {
            "name": "SMS Lanidor",
          "description": "Journey Builder activity to send SMS messages through external vendors",
          "step1Label": "Configure Activity"
        }
    },
    "arguments": {
        "execute": {
           "inArguments":[
               {
                   "id": "{{Contact.Attribute.SMSJourney.id}}",
                   "description": "{{Contact.Attribute.SMSJourney.description}}",
                   "sender": "{{Contact.Attribute.SMSJourney.sender}}",
                   "partnerId": "{{Contact.Attribute.SMSJourney.partnerId}}",
                   "text": "{{Contact.Attribute.SMSJourney.text}}",
                   "sendingDate": "{{Contact.Attribute.SMSJourney.sendingDate}}",
                   "recipients": [
                       {
                           "Mobile":"{{Contact.Attribute.SMSJourney.Mobile}}"
                       }
                   ]
               }
           ],
          "outArguments": [],
          "url": "https://lanidor-custom-activity-b6139fe2e7f2.herokuapp.com/journeybuilder/execute",
           "verb": "POST",
            "body": "",
            "header": "",
            "format": "json",
            "useJwt": true,
            "timeout": 10000
        }
    },
    "configurationArguments": {
      "save": {
        "url": "https://lanidor-custom-activity-b6139fe2e7f2.herokuapp.com/journeybuilder/save",
          "verb": "POST",
        "useJwt": true
       },
       "publish": {
        "url": "https://lanidor-custom-activity-b6139fe2e7f2.herokuapp.com/journeybuilder/publish",
           "verb": "POST",
        "useJwt": true
       },
      "stop": {
        "url": "https://lanidor-custom-activity-b6139fe2e7f2.herokuapp.com/journeybuilder/stop",
           "verb": "POST",
        "useJwt": true
      },
      "validate": {
        "url": "https://lanidor-custom-activity-b6139fe2e7f2.herokuapp.com/journeybuilder/validate",
        "verb": "POST",
        "useJwt": true
      }
    },
    "wizardSteps": [
        { "label": "Configure Activity", "key": "step1" }
    ],
    "userInterfaces": {
        "configModal": {
            "height": 400,
            "width": 1000,
          "fullscreen": false
        }
    },
    "schema": {
        "arguments": {
            "execute": {
                "inArguments": [],
                "outArguments": []
            }
        }
    }
}
